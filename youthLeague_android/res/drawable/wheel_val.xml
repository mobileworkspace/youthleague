<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="10dp"
        android:right="10dp"
        android:top="25dp">
        
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#667b7c81"
                android:startColor="#667b7c81"
                android:type="linear" />
        </shape>
    </item>
        
    <item
        android:bottom="1dp"
        android:left="10dp"
        android:right="10dp"
        android:top="1dp">
        
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#b1ddedf3"
                android:startColor="#b1c4dce9"
                android:type="linear" />
            <stroke android:width="1dp" android:color="#9ca1b5" />
        </shape>
    </item>


        
</layer-list>

                