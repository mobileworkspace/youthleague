<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    
    <item >
        
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
				android:type="linear"
				android:startColor="#FFFFFF"
                android:endColor="#FFFFFF" />
            <stroke android:width="1dp" android:color="@color/ivory" />
            
        </shape>
    </item>
        
    <item 
        android:bottom="0dp"
        android:left="10dp"
        android:right="10dp"
        android:top="0dp">
        
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
				android:type="linear"
				android:startColor="#272937"
                android:endColor="#71717b" />

            <stroke android:width="1dp" android:color="@color/ivory" />
            
        </shape>
    </item>
    
</layer-list>